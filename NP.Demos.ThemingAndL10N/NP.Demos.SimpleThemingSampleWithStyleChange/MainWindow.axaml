<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="NP.Demos.SimpleThemingSample.MainWindow"
        Title="NP.Demos.SimpleThemingSample"
        Background="{DynamicResource WindowBackgroundBrush}"
        Width="400"
        Height="400">
  <Grid RowDefinitions="Auto, *"
        Margin="10">
    <StackPanel Orientation="Horizontal">
      <!-- this button switches to light theme -->
      <Button x:Name="LightButton"
              Content="Light Theme"
              Margin="0,0,10,0"/>

      <!-- this button switches to dark theme -->
      <Button x:Name="DarkButton"
              Content="Dark Theme"
              Margin="0,0,0,0"/>
    </StackPanel>
    <Button Content="Hello World from Avalonia !!!"
            Grid.Row="1"
			Classes="MyButton"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="20"
			Background="{DynamicResource ButtonBackgroundBrush}"
            Foreground="{DynamicResource ForegroundBrush}"/>
  </Grid>
</Window>
